# 
# This script is a wrapper around the "rio" script, and provides the command
# line instruction to start all required Rio services
# (Cybernode, Monitor & Lookup)

scriptDir="`dirname $0`"

if [ "X$SORCER_HOME" = "X" ]; then
    export SORCER_HOME=`readlink -fn $scriptDir/..`
    echo "setting SORCER_HOME to $SORCER_HOME"
fi

if [ "X$RIO_HOME" = "X" ]; then
    export RIO_HOME="$SORCER_HOME/lib/rio"
    echo "setting RIO_HOME to $RIO_HOME"
fi

$SORCER_HOME/bin/rio start all $*
