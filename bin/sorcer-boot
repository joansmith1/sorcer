#!/bin/sh

##############################################################################
##                                                                          ##
##  SORCER OS Boot script for UN*X                                          ##
##                                                                          ##
##############################################################################

SORCER_APP_NAME="Sorcer_OS"

# resolve links - $0 may be a soft-link
PRG="$0"

while [ -h "$PRG" ] ; do
    ls=`ls -ld "$PRG"`
    link=`expr "$ls" : '.*-> \(.*\)$'`
    if expr "$link" : '/.*' > /dev/null; then
        PRG="$link"
    else
        PRG=`dirname "$PRG"`/"$link"
    fi
done

DIRNAME=`dirname "$PRG"`

$DIRNAME/rio start all &
sleep .5s
$DIRNAME/rio deploy $DIRNAME/../configs/rio-int/SorcerBoot.groovy
