#!/bin/sh

##############################################################################
##                                                                          ##
##  SORCER OS Boot script for UN*X                                          ##
##                                                                          ##
##############################################################################

SORCER_APP_NAME="Sorcer_OS"

# resolve links - $0 may be a soft-link
PRG="$0"

while [ -h "$PRG" ] ; do
    ls=`ls -ld "$PRG"`
    link=`expr "$ls" : '.*-> \(.*\)$'`
    if expr "$link" : '/.*' > /dev/null; then
        PRG="$link"
    else
        PRG=`dirname "$PRG"`/"$link"
    fi
done

DIRNAME=`dirname "$PRG"`

. "$DIRNAME/common-run"


STARTER_MAIN_CLASS=sorcer.boot.ServiceStarter

#sorcerConfig=$SORCER_HOME/configs/SorcerBoot.groovy
sorcerConfig=$SORCER_HOME/configs/sorcer-boot.config
extConfig=$SORCER_EXT/configs/SorcerExtBoot.groovy

if [ -f $extConfig ]; then
  startSos $sorcerConfig $extConfig "$@"
else
  startSos $sorcerConfig "$@"
fi

