<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.sorcersoft.sorcer</groupId>
        <artifactId>tools</artifactId>
		<version>1.0-M4-SNAPSHOT</version>
	</parent>

    <artifactId>sos-boot</artifactId>

    <name>SORCER tools :: booter</name>
    <description>SORCER</description>
    <url>http://sorcersoft.org/</url>

    <dependencies>
		<dependency>
			<groupId>org.sorcersoft.sorcer</groupId>
			<artifactId>sorcer-api</artifactId>
            <version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>org.sorcersoft.sorcer</groupId>
			<artifactId>sorcer-resolver</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>org.sorcersoft.sorcer</groupId>
			<artifactId>sorcer-launcher-base</artifactId>
			<version>${project.version}</version>
		</dependency>
        <dependency>
            <groupId>org.sorcersoft.sorcer</groupId>
            <artifactId>sorcer-installer</artifactId>
            <version>${project.version}</version>
        </dependency>
		<dependency>
			<groupId>org.sorcersoft.sorcer</groupId>
			<artifactId>sorcer-rio-lib</artifactId>
			<version>${project.version}</version>
            <scope>runtime</scope>
		</dependency>
		<dependency>
            <groupId>org.apache.river</groupId>
            <artifactId>start</artifactId>
            <version>${v.jini}</version>
        </dependency>
        <dependency>
            <groupId>net.jini</groupId>
            <artifactId>jsk-platform</artifactId>
        </dependency>
        <dependency>
            <groupId>org.rioproject</groupId>
            <artifactId>rio-start</artifactId>
			<version>${v.rio}</version>
		</dependency>
        <dependency>
            <groupId>org.rioproject</groupId>
            <artifactId>rio-lib</artifactId>
            <version>${v.rio}</version>
        </dependency>

        <dependency>
			<groupId>com.google.guava</groupId>
			<artifactId>guava</artifactId>
		</dependency>
		<dependency>
			<groupId>ch.qos.logback</groupId>
			<artifactId>logback-classic</artifactId>
		</dependency>
        <!--ServiceStarter-->
		<dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>jul-to-slf4j</artifactId>
            <version>${v.slf4j}</version>
        </dependency>

        <!-- groovy platform files -->
        <dependency>
            <groupId>org.sorcersoft.sorcer</groupId>
            <artifactId>sorcer-rio-start</artifactId>
            <version>${v.sorcer}</version>
            <scope>runtime</scope>
        </dependency>

        <!-- required by configs of services with UI -->
        <dependency>
            <groupId>net.jini.lookup</groupId>
            <artifactId>serviceui</artifactId>
            <version>${v.jini}</version>
            <scope>runtime</scope>
        </dependency>

        <!--ServiceStarter, Installer-->
		<dependency>
			<groupId>commons-io</groupId>
			<artifactId>commons-io</artifactId>
        </dependency>

	</dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <configuration>
                    <archive>
                        <manifest>
                            <addClasspath>true</addClasspath>
                        </manifest>
                    </archive>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
