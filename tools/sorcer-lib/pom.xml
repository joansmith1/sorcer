<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>tools</artifactId>
        <groupId>org.sorcersoft.sorcer</groupId>
        <version>1.0</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>sorcer-lib</artifactId>

    <name>SORCER tools :: requestor library</name>

    <dependencies>
        <dependency>
            <groupId>org.sorcersoft.sorcer</groupId>
            <artifactId>commons-req</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.sorcersoft.sorcer</groupId>
            <artifactId>dbp-handler</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.sorcersoft.sorcer</groupId>
            <artifactId>sos-platform</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.sorcersoft.sorcer</groupId>
            <artifactId>sos-api</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.sorcersoft.sorcer</groupId>
            <artifactId>sos-webster</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.sorcersoft.sorcer</groupId>
            <artifactId>sorcer-resolver</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.sorcersoft.sorcer</groupId>
            <artifactId>sorcer-rio-start</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>net.jini</groupId>
            <artifactId>jsk-platform</artifactId>
        </dependency>
        <dependency>
            <groupId>net.jini</groupId>
            <artifactId>jsk-lib</artifactId>
            <version>${v.jini}</version>
        </dependency>
        <dependency>
            <groupId>net.jini.lookup</groupId>
            <artifactId>serviceui</artifactId>
            <version>${v.jini}</version>
        </dependency>
        <dependency>
            <groupId>org.rioproject</groupId>
            <artifactId>rio-platform</artifactId>
            <version>${v.rio}</version>
        </dependency>
        <dependency>
            <groupId>org.rioproject</groupId>
            <artifactId>rio-api</artifactId>
            <version>${v.rio}</version>
        </dependency>
        <dependency>
            <groupId>org.rioproject.resolver</groupId>
            <artifactId>resolver-api</artifactId>
            <version>${v.rio}</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>2.3</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                        <configuration>
                            <artifactSet>
                                <excludes>
                                    <exclude>org.sorcersoft.sorcer:sos-boot:jar:</exclude>
                                    <exclude>org.sorcersoft.lockmgr:lockmgr-api:jar:</exclude>
                                    <exclude>org.jgroups:jgroups:jar:</exclude>

                                    <exclude>org.rioproject:rio-lib:jar:</exclude>
                                    <exclude>org.rioproject:rio-logging-support:jar:</exclude>
                                    <exclude>org.rioproject:rio-proxy:jar:</exclude>
                                    <exclude>org.rioproject:rio-start:jar:</exclude>

                                    <exclude>net.jini:jsk-dl:jar:</exclude>
                                    <exclude>net.jini:jsk-resources:jar:</exclude>
                                    <exclude>org.apache.river:start:jar:</exclude>
                                    <exclude>org.codehaus.groovy:*:jar:</exclude>

                                    <exclude>junit:junit</exclude>
                                    <exclude>*:xml-apis</exclude>
                                    <exclude>classworlds:classworlds</exclude>
                                    <exclude>org.apache.maven:lib:tests</exclude>
                                    <exclude>org.slf4j:slf4j-impl:jar:</exclude>
                                </excludes>
                            </artifactSet>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>