<?xml version="1.0"?>
<project name ="HelloWorld Requestor" default="run.requestor" basedir=".">
	<!-- set property values here -->
	<property name="requestor.name" value="dbp-req" />
	<property name="requestor.class" value="sorcer.core.provider.dbp.DatabaseStorerTest" />

	<property name="requestor.api" value="dbp-api"/>
	<property name="requestor.groupId" value="org.sorcersoft.sorcer"/>
	<property name="requestor.policy" value="${basedir}/src/main/resources/policy/req.policy"/>

	<!-- loads system environment variables -->
	<property environment="env" />
	<import file="${env.SORCER_HOME}/bin/common-run.xml" />
    <property name="requestor.version" value="${v.sorcer}" />
	<echo message="webster: ${provider.webster.url}" />

	<!-- provider codebase jars -->
	<property name="j1" value="${requestor.groupId}:${requestor.api}:${requestor.version}" />
	<property name="j2" value="org.sorcersoft.sorcer:sorcer-api" />
    <property name="j3" value="org.sorcersoft.sorcer:cataloger-api" />

	<property name="requestor.webster.codebase" value="${j1} ${j2} ${j3}" />
    <property name="webster.internal" value="true" />

</project>

