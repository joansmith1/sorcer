<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

	<modelVersion>4.0.0</modelVersion>

	<parent>
    <artifactId>first</artifactId>
    <groupId>com.example.sorcer</groupId>
    <version>1.0-M2-SNAPSHOT</version>
  </parent>

	<artifactId>first-prv</artifactId>
	<name>SORCER :: first :: provider</name>
	<description>SORCER</description>
	<url>http://sorcersoft.org/</url>

	<dependencies>
        <dependency>
            <groupId>org.sorcersoft.sorcer</groupId>
            <artifactId>sos-api</artifactId>
        </dependency>
		<dependency>
			<groupId>com.example.sorcer</groupId>
			<artifactId>first-api</artifactId>
			<version>${project.version}</version>
		</dependency>
        <dependency>
            <groupId>com.example.sorcer</groupId>
            <artifactId>first-sui</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
			<groupId>org.sorcersoft.sorcer</groupId>
			<artifactId>sos-platform</artifactId>
		</dependency>
		<dependency>
			<groupId>org.sorcersoft.sorcer</groupId>
			<artifactId>commons-prv</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>org.sorcersoft.sorcer</groupId>
			<artifactId>sos-env</artifactId>
			<version>${project.version}</version>
		</dependency>

        <dependency>
            <groupId>org.sorcersoft.sorcer</groupId>
            <artifactId>commons-req</artifactId>
            <version>${project.version}</version>
            <scope>test</scope>
        </dependency>

		<!-- CodeBase -->
		<dependency>
			<groupId>com.example.sorcer</groupId>
			<artifactId>first-proxy</artifactId>
			<version>${project.version}</version>
			<scope>provided</scope>
			<exclusions>
				<exclusion>
					<groupId>org.sorcersoft.lockmgr</groupId>
					<artifactId>lockmgr</artifactId>
				</exclusion>
				<exclusion>
					<groupId>org.sorcersoft.sorcer</groupId>
					<artifactId>sos-env</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
	</dependencies>

	<profiles>
		<profile>
			<id>run-its</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.sorcersoft.sorcer</groupId>
						<artifactId>sorcer-maven-plugin</artifactId>
						<executions>
							<execution>
								<id>sorcer-preit</id>
								<goals>
									<goal>provider</goal>
								</goals>
							</execution>
							<execution>
								<id>sorcer-it</id>
								<goals>
									<goal>run-requestor</goal>
								</goals>
								<configuration>
									<requestors>
										<param>
											<mainClass>com.example.sorcer.SampleServiceTester</mainClass>
											<classpath>
												<param>${project.groupId}:${project.artifactId}:${project.version}</param>
												<param>${project.groupId}:first-api:${project.version}</param>
												<param>org.sorcersoft.sorcer:commons-req:${project.version}</param>
												<param>net.jini.lookup:serviceui:${v.jini}</param>
											</classpath>
											<arguments>
												<param>com.example.sorcer.SampleServiceTester</param>
											</arguments>
										</param>
									</requestors>
								</configuration>
							</execution>
							<execution>
								<id>sorcer-postit</id>
								<goals>
									<goal>destroy</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>

